<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ican.mapper.BlogFileMapper">

    <select id="selectFileVOList" resultType="com.ican.model.vo.FileVO">
        SELECT id,
        file_url,
        file_name,
        file_size,
        extend_name,
        file_path,
        is_dir,
        create_time
        FROM t_blog_file
        <where>
            <if test="filePath != null">
                file_path = #{filePath}
            </if>
        </where>
        LIMIT #{limit}, #{size}
    </select>
</mapper>
